<div class="page-header">
    <div class="pull-right"><%= link_to 'New Person', new_person_path, class:"btn btn-info" %></div>
    <h1>Listing people</h1>
</div>


<table class="table">
  <thead>
    <tr>
      <th class="col-md-2">First name</th>
      <th class="col-md-2 col-md-offset-2">Last name</th>
      <th class="col-md-2 col-md-offset-2">Date of birth</th>
      <th class="col-md-2 col-md-offset-2">Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td class="col-md-2"><%= person.first_name %></td>
        <td class="col-md-2"><%= person.last_name %></td>
        <td class="col-md-2"><%= person.date_of_birth %></td>
        <td class="col-md-2"><%= person.bio %></td>
        <td class="col-md-2"><%= person.active %></td>
        <td class="col-md-2"><%= link_to 'Show', person %></td>
        <td class="col-md-1 col-md-offset-1"><%= link_to 'Edit', edit_person_path(person) %></td>
        <td class="col-md-1 col-md-offset-1"><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="well example">
  <p>
    <strong>
      It should look like this:
    </strong>
  </p>

  <%= image_tag "list-people.png", class: "img-responsive" %>
</div>
</div>
